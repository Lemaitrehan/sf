{% extends 'base.html.twig' %}

{% block body %}

    {{ include('header.html.twig') }}

    <div id="content">
        <!--breadcrumbs-->
        <div id="content-header">
            <div id="breadcrumb"><a href="{{ path('admin_index') }}" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>
                    首页</a></div>
        </div>
        <!--End-breadcrumbs-->

        <!--Action boxes-->
        <div class="container-fluid">
            <!--Chart-box-->
            <div class="row-fluid">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>积分管理</h5>
                    </div>
                    <div class="widget-content nopadding">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="control-group">
                            <label class="control-label">RBM(元) :</label>
                            <div class="controls">
                                {{ form_widget(form.rmb, {'attr': {'class': 'span11'}}) }}
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">兑换积分 :</label>
                            <div class="controls">
                                {{ form_widget(form.integral) }}
                            </div>
                        </div>
                        <div class="form-actions">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <!--End-Chart-box-->

        </div>
    </div>
{% endblock %}