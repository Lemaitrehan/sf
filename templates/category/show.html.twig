{% extends 'base.html.twig' %}

{% block body %}

    {{ include('header.html.twig') }}

    <div id="content">
        <!--breadcrumbs-->
        <div id="content-header">
            <div id="breadcrumb"><a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>
                    商品类型管理</a></div>
        </div>
        <!--End-breadcrumbs-->

        <!--Action boxes-->
        <div class="container-fluid">
            <!--Chart-box-->
            <div class="row-fluid">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                        <h5>商品类型列表</h5>
                        <a class="label label-info" href="{{ path('admin_category_create') }}">添加</a> </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>名称</th>
                                <th>PID</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in category %}
                                <tr>
                                    <td>{{ item.id }}</td>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.pid }}</td>
                                    <td>
                                        <a href="{{ path('admin_category_edit', {'id': item.id}) }}" class="btn btn-mini btn-info">编辑</a>
                                        <a href="#" class="btn btn-mini btn-warning">删除</a>
                                        <a href="#" class="btn btn-mini btn-danger">添加子栏目</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--End-Chart-box-->

        </div>
    </div>
{% endblock %}